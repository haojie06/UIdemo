<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentBackground"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/property">

        <Button
            android:id="@+id/button_piggy_back"
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="存钱罐"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:textColor="#fff"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="明细"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="36dp"
            android:textColor="#fff"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昨日收益（元）"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:textColor="#fff"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.20"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:textColor="#fff"
            android:textSize="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:textColor="#fff"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="217dp"
            android:textColor="#fff"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="234dp"
            android:textColor="#fff"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="210dp"
            android:textColor="#fff"
            android:text="余额（元）"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="210dp"
            android:layout_gravity="right"
            android:textColor="#fff"
            android:text="累计收益（元）"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textView_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="230dp"
            android:textColor="#fff"
            android:text="1024.00"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView_income_inpiggy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginTop="230dp"
            android:layout_gravity="right"
            android:textColor="#fff"
            android:text="1024.00"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView_updateTime_inPiggy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:text="截止2017-12-25"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="享受更高权益去投定期"/>

        <Button
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/jumpto"/>

    </FrameLayout>



</LinearLayout>