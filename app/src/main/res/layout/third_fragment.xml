<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/property">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资产"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/textview_incomeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收益明细"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:textSize="17dp"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计收益（元）"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/textView_incomeInAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="125dp"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总资产（元）"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="180dp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/textView_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/textView_updatedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#fff"
            android:text="截止2017-12-25"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff">
        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="累计收益排名第  "
            android:textSize="15dp"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/textView_moneyRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/moneyColor"
            android:textSize="15dp"
            android:text="1"/>

        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  名,  较前日  "
            android:textSize="15dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/textView_moneyDeltaRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/moneyColor"
            android:textSize="15dp"
            android:text="0"/>

        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  名"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/imageView_deltaRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/viewGroup_piggy"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fff"
        android:layout_margin="10dp"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/tag_piggy"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="30dp"
            android:text="昨日收益"
            android:textSize="20dp"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/textView_piggy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/moneyColor"
            android:textSize="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:text="1,000.00元"
            />

        <TextView
            android:id="@+id/textView_monetEarnedByPiggy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/moneyColor"
            android:textSize="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="right"
            android:text="6.00元"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:text="存钱罐"
            android:textSize="20dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fff"
        android:layout_margin="10dp"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/tag_dingqi"/>

        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定期"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="30dp"
            android:text="昨日收益"
            android:textSize="20dp"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/textView_dingqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/moneyColor"
            android:textSize="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:text="1,000.00元"
            />

        <TextView
            android:id="@+id/textView_moneyEarnedByDingqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/moneyColor"
            android:textSize="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="right"
            android:text="6.00元"/>

    </FrameLayout>
    </LinearLayout>

</LinearLayout>